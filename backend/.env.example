# ======================
# Core Application Settings
# ======================
PROJECT_NAME="AI Document Analysis API"
API_V1_PREFIX="/api/v1"

# ======================
# Database Configuration
# ======================
# Format: sqlite:///path/to/db.sqlite or postgresql://user:password@localhost/dbname
DATABASE_URL="sqlite:///app.db"

# ======================
# Storage Configuration
# ======================
# Base URL for the API (e.g., http://localhost:8000)
BASE_URL="http://localhost:8000"
# Local filesystem path for storing uploaded files and generated content
STORAGE_PATH="./storage"

# ======================
# ML Model Configuration
# ======================
# Sentence transformer model for generating embeddings
EMBEDDING_MODEL_NAME="sentence-transformers/all-mpnet-base-v2"

# ======================
# LLM Provider Configuration
# ======================
# Supported providers: 'openai', 'azure', 'gemini', 'ollama'
LLM_PROVIDER=""
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=2048
LLM_TIMEOUT=60

